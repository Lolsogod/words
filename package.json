{
  "name": "words",
  "version": "1.0.0",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "keywords": [
    "nodejs",
    "typescript",
    "modern",
    "starter",
    "nodejs typescript modern starter",
    "debugging",
    "ts",
    "esbuild",
    "prettier",
    "typescript5",
    "CI/CD",
    "minimal"
  ],
  "author": "Pierre Dahmani <hi@pierre-dev.com>",
  "license": "MIT",
  "scripts": {
    "bundle": "esbuild src/index.ts --outdir=bundle --sourcemap --bundle --platform=node --target=node21.0.1",
    "clean": "rimraf dist",
    "compile": "tsc",
    "compile-watch": "tsc -w",
    "dev": "nodemon --watch src --ext ts,json --exec \"pnpm bundle && pnpm start\"",
    "format": "prettier . --write",
    "format-check": "prettier . --check",
    "lint": "eslint . --fix",
    "lint-check": "eslint .",
    "start": "node --enable-source-maps ./bundle/index.js",
    "test": "glob \"src/**/*.test.ts\" \"test/**\" -c \"tsx --test\""
  },
  "devDependencies": {
    "@tsconfig/node21": "21.0.1",
    "@types/node": "20.11.24",
    "@types/nodemon": "1.19.6",
    "@typescript-eslint/eslint-plugin": "7.1.0 ",
    "@typescript-eslint/parser": "7.1.0 ",
    "esbuild": "0.20.1 ",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "glob": "10.3.10",
    "nodemon": "3.1.0",
    "prettier": "3.2.5",
    "rimraf": "5.0.5",
    "tsx": "4.7.1",
    "typescript": "5.3.3"
  }
}
